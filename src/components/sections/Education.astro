---
import Section from "@components/Section.astro";

import { getI18N } from "@utils/i18n";

const { education, basics } = getI18N(Astro.currentLocale);
const { name } = basics;

const lang = Astro.currentLocale;
---

<Section title={lang === "en" ? "Certificates" : "Certificados"}>
  <ul class="flex flex-col gap-6">
    {
      education.map(({ institution, url, area, startDate, endDate }) => {
        return (
          <li>
            <article>
              <header class="mb-2 flex flex-col items-center justify-between text-gray-100/55  print:text-stone-500/60">
                <div class="flex w-full flex-col gap-[3px] divide-y-[2px] divide-separator print:divide-separatorPrint">
                  <h4 class="flex justify-between text-sm tracking-normal sm:text-base">
                    {lang === "en" ? "School" : "Escuela"}:{" "}
                    <a
                      title={url}
                      href={url}
                      target="_blank"
                      rel="nofollow noreferrer"
                    >
                      <span>{institution}</span>
                    </a>
                  </h4>
                  <h5 class="flex justify-between pt-1 text-sm text-inherit sm:text-base">
                    {lang === "en" ? "Title" : "Titulo"}:
                    <a
                      target="_blank"
                      title={`
                          ${
                            lang === "es"
                              ? `Ver Certificado`
                              : `Watch Certificate`
                          }
                        `}
                      href="/certificate.pdf"
                    >
                      <span>{area}</span>
                    </a>
                  </h5>
                  <h6 class="flex justify-between pt-1 text-sm text-inherit sm:text-base">
                    {lang === "en" ? "Profile" : "Perfil"}:
                    <a
                      target="_blank"
                      rel="noFollow noreferrer"
                      title={`
                          ${
                            lang === "es"
                              ? `Ver Perfil de Platzi de ${name}`
                              : `Visit Jesus' Platzi Profile`
                          }
                        `}
                      href="https://www.platzi.com/@yisus427g"
                    >
                      <span>@yisus427g</span>
                    </a>
                  </h6>
                </div>
                <time class="mt-2 min-w-fit text-nowrap text-lg text-inherit">
                  {startDate} | {endDate}
                </time>
              </header>
              <footer>{/* <p>{summary}</p> */}</footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>
<style>
  a:hover {
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-color: #888;
  }
</style>
