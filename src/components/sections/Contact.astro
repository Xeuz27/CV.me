    {
      profiles.map(({ network, url, show = true }) => {
        return (
          <a
            class={`${show === false && "!hidden"}`}
            href={url}
            title={`
              ${
                lang === "es"
                  ? `visitar el perfil de ${name} en ${network}`
                  : `Go to Jesus' ${network} `
              }
              `}
            target="_blank"
          >
            <Icon icon={network} classes={contactIconStyles} />
            <span class="sr-only">
              {lang === "es"
                ? `visitar el perfil de ${name} en ${network}`
                : `Go to Jesus' ${network} `}
            </span>
          </a>
        );
      })
    }
  </footer>
</Section>
<style>
  footer.no-print a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #393939;
    padding: 10px;
    border-radius: 12px;
    transition: all 0.5s;
  }
  footer.no-print a:hover {
    background-color: rgb(8, 31, 92);
    border: 1px solid #dfdfdf;
    @apply drop-shadow-[0_0px_8px_#1037a1];
  }
  footer.no-print a:hover {
    color: #dfdfdf;
  }
  footer.print li a:hover {
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-color: #888;
  }
</style>
