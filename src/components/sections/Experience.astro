---
import Section from "@components/Section.astro";
import { work } from "@cv";
---

<Section title="Experiencia Laboral">
  <ul class="flex flex-col gap-6">
    {
      work.map(({ name, position, startDate, endDate, summary }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate !== null ? new Date(endDate).getFullYear() : "Actual";
        const years = `${startYear} - ${endYear}`;
        return (
          <li class="">
            <article>
              <header class="mb-2 flex items-start justify-between">
                <div>
                  <h3 class="text-lg font-semibold text-stone-200/80 print:text-stone-700/80">
                    {name}
                  </h3>
                  <h4 class="text-sm text-stone-400/70 print:text-stone-700/70">
                    {position}
                  </h4>
                </div>

                <time class="text-sm leading-9 sm:text-lg" datetime="">
                  {years}
                </time>
              </header>

              <footer>
                <p>{summary}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>
