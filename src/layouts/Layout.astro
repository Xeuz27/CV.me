---
import BaseHead from "@components/BaseHead.astro";

interface Props {
  title: string;
  description: string;
  ogImage: string;
}

const { title, description, ogImage } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={title} description={description} ogImage={ogImage} />
  </head>
  <body>
    <slot />
    <style is:global>
      *,
      *::after,
      *::before {
        margin: 0;
        padding: 0;
        box-sizing: 0;
      }
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );
      }
      html {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          "Courier New",
          Courier,
          monospace;
        background: #0f0f0f;
        color: rgb(153, 153, 153);
        letter-spacing: -0.025rem;
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
        color: rgb(255 255 255 / 0.8);
      }
      p {
        font-size: 0.9rem;
        line-height: 1.25;
        text-wrap: pretty;
      }
    </style>
  </body>
</html>
